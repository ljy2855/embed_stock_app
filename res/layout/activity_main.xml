<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ListView
        android:id="@+id/stockListView"
        android:layout_width="match_parent"
        android:layout_height="300dp" />

    <TextView
        android:id="@+id/balanceTextView"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/totalAssetsTextView"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:background="#EEE"
        android:gravity="center_horizontal"
        android:padding="8dp"
        android:text="Balance: $0.00"
        android:textColor="#000"
        android:textSize="16sp" />

    <ListView
        android:id="@+id/ownedStocksListView"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_alignBottom="@+id/balanceTextView"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="283dp" >
    </ListView>

    <TextView
        android:id="@+id/totalAssetsTextView"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_above="@+id/balanceTextView"
        android:layout_toRightOf="@+id/ownedStocksListView"
        android:background="#EEE"
        android:gravity="center_horizontal"
        android:padding="8dp"
        android:text="Total Assets: $0.00"
        android:textColor="#000"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ownedStocksListView"
        android:layout_alignRight="@+id/totalAssetsTextView"
        android:layout_marginRight="140dp"
        android:text="Account"
        android:textAppearance="?android:attr/textAppearanceLarge" />

</RelativeLayout>
